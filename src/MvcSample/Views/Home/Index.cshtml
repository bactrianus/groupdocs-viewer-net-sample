@{
    ViewBag.Title = "Home Page";
}
<h1>GroupDocs.Viewer for .NET Sample</h1>


<table>
    <tr>
        <td>
            <h2>View document in HTML mode</h2>
        </td>
        <td>
            <h2>View document in image mode</h2>
        </td>
     </tr>
    <tr>
        <td>
           
            <div id="viewerHtmlDiv"></div>
        </td>
        <td>
            
            <div id="viewerImageDiv"></div>
        </td>
    </tr>
</table>

@section scripts{
    <script>
        $(function () {
            $('#viewerHtmlDiv').groupdocsViewer({
                filePath: 'candy.pdf',
                zoomToFitWidth: true,
                //downloadPdfFile: true,
                //showDownload: true,
                showFolderBrowser: true,
                showHeader: true,
                showPaging: true,
                //showPrint: true,
                showThumbnails: true,
                useHtmlThumbnails: true,
                width: 600,
                height: 900,
                useHtmlBasedEngine: true
            });
        });


